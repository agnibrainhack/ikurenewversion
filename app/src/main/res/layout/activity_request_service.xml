<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="16dp"
        android:id="@+id/card1"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:id="@+id/image1"
                android:src="@drawable/ecgtest"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_below="@+id/image1"
                android:layout_height="80dp">
            <Button
                android:id="@+id/selectdate1"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_marginStart="21dp"

                android:layout_marginTop="20dp"
                android:textSize="11sp"
                android:textColor="#adafb9"

                android:text="Select Date"

                android:background="@drawable/circ_date_back"

                />

                <Button
                    android:id="@+id/selecttime1"

                    android:layout_width="80dp"
                    android:text="Set time"
                    android:layout_height="30dp"
                    android:textSize="11sp"
                    android:background="@drawable/circ_time_back"
                    android:layout_marginBottom="9dp"
                    android:layout_marginTop="20dp"
                    android:textColor="#9b9daa"
                    android:textStyle="bold"

                    android:layout_marginStart="12dp" />

                <Button
                    android:id="@+id/submit1"

                    android:layout_width="110dp"
                    android:layout_height="40dp"
                    android:textColor="#FFFFFF"
                    android:layout_marginBottom="9dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/circ_submit_back"
                    android:text="Submit"
                     />
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

