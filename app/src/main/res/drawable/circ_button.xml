<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="15dip" />
            <stroke android:width="1dip" android:color="#347a91" />
            <gradient android:angle="-90" android:endColor="#418fb6" android:startColor="#5ba2de" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="15dip" />
            <stroke android:width="1dip" android:color="#6fd6c3" />
            <solid android:color="#1b2748"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="15dip" />
            <stroke android:width="1dip" android:color="#aae7f5" />
            <gradient android:angle="-90" android:endColor="#46e4dd" android:startColor="#6bd1d1" />
        </shape>
    </item>
</selector>