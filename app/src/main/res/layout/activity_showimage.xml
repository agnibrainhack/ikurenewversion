<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/showimg"
            android:layout_width="400dp"
            android:layout_height="500dp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/save"
            android:scaleType="fitXY" />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/showimg"
        android:layout_alignTop="@+id/showimg"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="7dp"
        android:clickable="true"
        android:elevation="24dp"
        android:src="@drawable/printer"
        app:layout_anchor="@id/pdfView"
        app:layout_anchorGravity="bottom|right|end"
        tools:targetApi="lollipop" />

        <Button
            android:id="@+id/save"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fab"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="434dp"
            android:background="@drawable/circ_button"
            android:elevation="8dp"
            android:gravity="center"
            android:text="Save The ECG Report and View"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:targetApi="lollipop" />
    </RelativeLayout>
</ScrollView>