<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#e5f5ec" />
            <gradient android:angle="-90" android:startColor="#e0e4ef" android:endColor="#dff1e0"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#cfede8" />
            <solid android:color="#dfecdc"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#d9f4dd" />
            <gradient android:angle="-90" android:startColor="#ddecea" android:endColor="#dfeae0" />
        </shape>
    </item>
</selector>